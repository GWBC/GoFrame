{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "go",
      "label": "window",
      "command": "build",
      "args": ["-o", "${workspaceFolder}/bin/file_sync.exe"],
      "problemMatcher": ["$go"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/src",
        "env": {
          "GOOS": "windows"
        }
      }
    },
     {
      "type": "go",
      "label": "linux",
      "command": "build",
      "args": ["-o", "${workspaceFolder}/bin/file_sync"],
      "problemMatcher": ["$go"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}/src",
        "env": {
          "GOOS": "linux"
        }
      }
    }
  ]
}
